pipeline {
    environment {
        registry = "matiasnmont/mundose-jenkins"
        registryCredential = 'dockerhub_id'
        dockerImage = ''
    }
    agent any
    stages {
        stage('Build') {
            steps {
			   dir("$WORKSPACE/src/mundose-example"){
			   	 sh 'echo buildeando'
			     sh 'rm package-lock.json'
			     sh 'npm install'
			   }
            }
        }
        stage('Test') {
            steps {
			   dir("$WORKSPACE/src/mundose-example"){
			       sh 'echo testing'
			   		sh "npm run lint"
					sh "npm run test"
				}
            }
        }
        stage('Deploy') {
            steps {
			    dir("$WORKSPACE/src/mundose-example"){
					script {
                    dockerImage = docker.build registry
                }
                script {
                    docker.withRegistry( '', registryCredential ) {
                        dockerImage.push()
                     }
                   }
				sh "docker run matiasnmont/mundose-jenkins:latest"
				}
            }
        }
    }
}
